@model IEnumerable<ControllersMVCVTP4.Models.Employee>

@using ControllersMVCVTP4.Models;

@{
    ViewBag.Title = "Employee List";
}

<div style="font-family:Arial">
    <h2>Employee List</h2>
    <ul>
        @foreach (Employee employee in @Model)
        {
            <li>
                @Html.ActionLink(employee.FirstName, "DatabaseDetails", new { id = employee.ID })
            </li>
        }
    </ul>
    @Html.ActionLink("Back To List", "Index", "Department")

</div>
